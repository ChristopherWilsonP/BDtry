<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.bdtry.controller.AdminController" prefWidth="800" prefHeight="600">
    <top>
        <ToolBar>
            <Label text="Dashboard Admin - Sistem Sekolah" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
            <Pane fx:id="spacer" HBox.hgrow="ALWAYS" />
            <Button text="Logout" onAction="#handleLogout" />
        </ToolBar>
    </top>

    <center>
        <TabPane fx:id="adminTabPane">
            <Tab text="Input Siswa">
                <VBox spacing="10" padding="10">
                    <Label text="Form Input Siswa Baru" style="-fx-font-size: 14px; -fx-font-weight: bold;" />
                    <TextField fx:id="siswaNameField" promptText="Nama Lengkap" />
                    <DatePicker fx:id="siswaBirthDatePicker" promptText="Tanggal Lahir" />
                    <TextField fx:id="siswaAddressField" promptText="Alamat" />
                    <ComboBox fx:id="kelasComboBox" promptText="Pilih Kelas" />
                    <ComboBox fx:id="waliKelasComboBox" promptText="Pilih Wali Kelas" />
                    <ComboBox fx:id="ekskulComboBox" promptText="Pilih Ekstrakurikuler" />
                    <Button text="Simpan Siswa" onAction="#handleSimpanSiswa" />
                    <Label fx:id="siswaStatusLabel" textFill="green" />
                </VBox>
            </Tab>

            <Tab text="Input Jadwal Kelas">
                <VBox spacing="10" padding="10">
                    <Label text="Form Jadwal Kelas" style="-fx-font-size: 14px; -fx-font-weight: bold;" />
                    <ComboBox fx:id="kelasJadwalComboBox" promptText="Pilih Kelas" />
                    <ComboBox fx:id="hariComboBox" promptText="Hari" />
                    <TextField fx:id="jamMulaiField" promptText="Jam Mulai (contoh: 08:00)" />
                    <TextField fx:id="jamSelesaiField" promptText="Jam Selesai (contoh: 09:00)" />
                    <ComboBox fx:id="guruComboBox" promptText="Pilih Guru" />
                    <ComboBox fx:id="matpelComboBox" promptText="Pilih Mata Pelajaran" />
                    <Button text="Simpan Jadwal" onAction="#handleSimpanJadwal" />
                    <Label fx:id="jadwalStatusLabel" textFill="green" />
                </VBox>
            </Tab>

            <Tab text="Pembagian Kelas">
                <VBox spacing="10" padding="10">
                    <Label text="Pembagian Kelas Siswa" style="-fx-font-size: 14px; -fx-font-weight: bold;" />
                    <ComboBox fx:id="siswaNaikComboBox" promptText="Pilih Siswa" />
                    <ComboBox fx:id="kelasBaruComboBox" promptText="Kelas Baru" />
                    <ComboBox fx:id="waliBaruComboBox" promptText="Wali Kelas Baru" />
                    <Button text="Update Kelas Siswa" onAction="#handleUpdateKelasSiswa" />
                    <Label fx:id="updateStatusLabel" textFill="green" />
                </VBox>
            </Tab>
        </TabPane>
    </center>
</BorderPane>
